    <script>
    function isLicenseNo(vehicleNumber) {
        var result = false;
        if (vehicleNumber.length == 7 || vehicleNumber.length == 8){
           var express = /^[京津沪渝冀豫云辽黑湘皖鲁新苏浙赣鄂桂甘晋蒙陕吉闽贵粤青藏川宁琼使领A-Z]{1}[A-Z]{1}[A-Z0-9]{4,6}[A-Z0-9挂学警港澳]{0,1}$/;
           result = express.test(vehicleNumber);
           }
        return result;
    }
    
        function verify() {
           
            var carName = $("input[ name='car_name']").val();
            if (isLicenseNo(carName)) {
                $('.warning').html("");
                return true;
            }
            if(isLicenseNo(carName)){
                $('.warning').html("请输入正确的车牌号!");
                return false;
            }
           
        }  
        $("input[name='car_name']").focus(function(){
             $('.warning').html("");

        });
    </script>
